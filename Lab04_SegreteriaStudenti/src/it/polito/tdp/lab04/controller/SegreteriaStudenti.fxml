<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="442.0" prefWidth="561.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.lab04.controller.SegreteriaStudentiController">
   <top>
      <Label text="Lab3_Segreteria Studenti" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" top="10.0" />
         </BorderPane.margin></Label>
   </top>
   <center>
      <VBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Label text="Corso:" />
                  <ComboBox fx:id="comboCorsi" promptText="Corsi" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#doCercaIscritti" text="Cerca iscritti corso" />
            <HBox spacing="10.0">
               <children>
                  <Label text="Studente:" />
                  <TextField fx:id="txtMatricola" promptText="Matricola" />
                  <Button mnemonicParsing="false" onAction="#doCompletamentoAuto" />
                  <TextField fx:id="txtNome" editable="false" promptText="Nome" />
                  <TextField fx:id="txtCognome" editable="false" promptText="Cognome" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#doCercaCorsi" text="Cerca corsi" />
                  <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#doIscrivi" text="Iscrivi" />
               </children>
            </HBox>
            <TextArea fx:id="txtResult" editable="false" />
            <HBox alignment="TOP_RIGHT" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#doReset" text="Reset" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
